@model XcelerateLinks.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Entrar";
}

<section class="login-hero login-centered">
    <div class="hero-right">
        <div class="login-card">
            <h3>Entrar na sua conta</h3>

            @* Show any ModelState / non-field errors *@
            <div>
                <div asp-validation-summary="All" class="alert alert-danger" role="alert" />
            </div>

            @* Dev-only debug info from TempData (remove in production) *@
            @if (TempData["AuthDebug"] != null)
            {
                <div class="alert alert-info" role="alert">
                    <strong>Debug:</strong> @TempData["AuthDebug"]
                </div>
            }

            <form asp-action="Login" method="post" class="mt-2">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Utilizador</label>
                    <input asp-for="Username" class="form-control" placeholder="nome de utilizador ou email" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Password" class="form-label">Senha</label>
                    @* Ensure password is input type="password" so browser does not show it *@
                    <input asp-for="Password" type="password" class="form-control" placeholder="senha" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-2">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label" style="color:#ccc">Lembrar-me</label>
                    </div>
                    <a class="secondary-link" href="/Account/ForgotPassword">Esqueceu a senha?</a>
                </div>

                <input asp-for="ReturnUrl" type="hidden" />
                <button type="submit" class="login-btn">Entrar</button>
                <a class="secondary-link" href="/Account/Register">Ainda não tem conta? Criar conta</a>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}